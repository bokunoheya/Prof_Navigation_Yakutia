<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/fontv2</item>
<!--
        <item name="android:fontFamily">@font/text</item>
-->
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TextApp1" parent="AppTheme">
        <item name="android:textSize">14dp</item>

    </style>
    <style name="TextApp">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>

        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:shadowDy">200</item>
    </style>

    <style name="UpBarText">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">textStart</item>

    </style>

    <style name="Spec_Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">40dp</item>
    </style>



    <style name="Spec_Text_Up">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="buttonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>

        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="app_name_start">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>

    </style>

    <style name="AppThemeSplash" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="AppThemeBlink" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="AppThemeBlinkSmall" parent="AppThemeBlink">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AppThemeBlinkSmall2" parent="AppThemeBlink">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Spec_Text1">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Spec_Text2">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextApp3">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="TextApp4">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="buttonStyle1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>

        <item name="android:textColor">#000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay"  >
        <item name="android:background">#EB8515</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">#EB8515</item>
    </style>


    <style name="MyActionBar" parent="AppTheme.PopupOverlay">
        <item name="android:background">#EB8515</item>
    </style>

    <style name="soc_gar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">25dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:typeface">normal</item>
    </style>
</resources>
