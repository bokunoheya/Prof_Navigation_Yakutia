<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/professii"
        style="@style/TextApp"
        android:layout_width="@dimen/shirina_main"
        android:layout_height="73dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/block_round_color_yellow"
        android:paddingLeft="70dp"
        android:text="@string/professii"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spis_uch"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button2"
        style="@style/TextApp"
        android:layout_width="@dimen/shirina_main"
        android:layout_height="73dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/block_round_color"
        android:paddingLeft="70dp"
        android:text="@string/Test"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/spis_uch"
        style="@style/TextApp"
        android:layout_width="@dimen/shirina_main"
        android:layout_height="73dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/block_round_color_green"
        android:paddingLeft="70dp"
        android:text="@string/menu_slideshow"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile" />

    <Button
        android:id="@+id/profile"
        style="@style/TextApp"
        android:layout_width="@dimen/shirina_main"
        android:layout_height="73dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/block_round_color_blue"
        android:paddingLeft="70dp"
        android:text="@string/menu_gallery"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

</androidx.constraintlayout.widget.ConstraintLayout>