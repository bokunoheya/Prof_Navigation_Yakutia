<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/buttonStyle2"
    tools:context="com.pc.profnavykt.ui.SocGarant" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heightList"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/block_opacity_p"
                android:paddingLeft="100dp"
                android:paddingRight="10dp"
                android:text="@string/soc_gar_detyam_sir" />

            <Button
                android:id="@+id/button11"
                android:paddingLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heightList"
                android:layout_marginBottom="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/block_opacity_b"
                android:text="@string/gov_ac_st" />

            <Button
                android:id="@+id/button14"
                android:paddingLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heightList"
                android:layout_marginBottom="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/block_opacity_o"
                android:text="@string/mery_soc_pod" />

            <Button
                android:id="@+id/button15"
                android:paddingLeft="100dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heightList"
                android:layout_marginBottom="10dp"
                android:background="@drawable/block_opacity_g"
                android:text="@string/pitanie" />

            <Button
                android:id="@+id/button13"
                android:paddingLeft="100dp"
                android:paddingRight="10dp"

                android:layout_width="match_parent"
                android:layout_height="@dimen/heightList"
                android:background="@drawable/block_opacity_r"
                android:text="@string/gov_soc_st" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
